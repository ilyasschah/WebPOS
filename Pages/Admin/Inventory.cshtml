@page
@model WebPOS.Pages.Admin.InventoryModel
@{
    ViewData["Title"] = "Inventory Management";
    Layout = "_Layout";
}

<div class="container py-4">
    <h2 class="mb-4">Inventory Management</h2>
    <form method="get" class="row g-2 mb-3 align-items-end">
        <div class="col-auto">
            <label for="Search" class="form-label mb-0">Search</label>
            <input id="Search" name="Search" type="text" value="@Model.Search" class="form-control" placeholder="Product name" />
        </div>
        <div class="col-auto">
            <label for="CategoryId" class="form-label mb-0">Category</label>
            <select id="CategoryId" name="CategoryId" class="form-select">
                <option value="">All</option>
                @foreach (var cat in Model.Categories)
                {
                    if (cat.CategoryId == Model.CategoryId)
                    {
                        <option value="@cat.CategoryId" selected>@cat.Name</option>
                    }
                    else
                    {
                        <option value="@cat.CategoryId">@cat.Name</option>
                    }
                }
            </select>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary">Filter</button>
        </div>
        <div class="col-auto ms-auto">
            <a class="btn btn-outline-success" href="/Admin/InventoryPdf" target="_blank">
                <i class="bi bi-filetype-pdf"></i> Export PDF
            </a>
        </div>
    </form>
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Category</th>
                    <th>Stock</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var prod in Model.Products)
            {
                <tr>
                    <td>@prod.Name</td>
                    <td>@prod.Category?.Name</td>
                    <td>
                        <form asp-page-handler="UpdateStock" method="post" class="d-flex align-items-center">
                            <input type="hidden" name="productId" value="@prod.ProductId" />
                            <input type="number" name="stock" value="@prod.Stock" class="form-control w-auto me-2" style="width: 80px;" />
                            <button type="submit" class="btn btn-sm btn-primary">Save</button>
                        </form>
                    </td>
                    <td>@prod.Stock</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
