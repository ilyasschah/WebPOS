@page
@model WebPOS.Pages.Admin.SalesReportModel
@{
    ViewData["Title"] = "Sales Reports";
    Layout = "_Layout";
}

<div class="container py-5">
    <h2 class="mb-4 text-center">Sales Reports</h2>
    <form method="get" class="row g-3 align-items-end mb-4">
        <div class="col-auto">
            <label for="from" class="form-label mb-0">From</label>
            <input type="date" id="from" name="from" value="@Model.From?.ToString("yyyy-MM-dd")" class="form-control" />
        </div>
        <div class="col-auto">
            <label for="to" class="form-label mb-0">To</label>
            <input type="date" id="to" name="to" value="@Model.To?.ToString("yyyy-MM-dd")" class="form-control" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Sale ID</th>
                    <th>Order #</th>
                    <th>Table</th>
                    <th>Seller</th>
                    <th>Customer</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sale in Model.Sales)
                {
                    <tr>
                        <td>@sale.SaleDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@sale.SaleId</td>
                        <td>@(sale.Order != null ? sale.Order.OrderNumber.ToString() : "-")</td>
                        <td>@(sale.Table != null ? sale.Table.Name : "-")</td>
                        <td>@(sale.User != null ? sale.User.Username : sale.UserId.ToString())</td>
                        <td>@(sale.Customer != null ? sale.Customer.Name : "Default")</td>
                        <td>@sale.TotalAmount.ToString("0.00") DH</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="fw-bold">
                    <td colspan="4" class="text-end">Total:</td>
                    <td>@Model.TotalAmount.ToString("C")</td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
