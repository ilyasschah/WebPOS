@page
@model WebPOS.Pages.Admin.ReportsModel
@{
    ViewData["Title"] = "Reporting Tools";
    Layout = "_Layout";
}

<div class="container py-5">
    <h1 class="mb-4 text-center">Reporting Tools</h1>
    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h3 class="card-title mb-3">Sales Reports</h3>
                    <p class="card-text text-muted">View and export daily, weekly, or monthly sales data.</p>
                    <a href="/Admin/SalesReport" class="btn btn-primary mt-auto">Go to Sales Reports</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h3 class="card-title mb-3">Inventory Reports</h3>
                    <p class="card-text text-muted">Track current stock levels and low inventory alerts.</p>
                    <a href="/Admin/Inventory" class="btn btn-primary mt-auto">Go to Inventory Reports</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h3 class="card-title mb-3">Custom Analytics</h3>
                    <p class="card-text text-muted">Analyze your business with custom charts and KPIs.</p>
                    <a href="/Admin/CustomAnalytics" class="btn btn-primary mt-auto">Go to Analytics</a>
                </div>
            </div>
        </div>
    </div>
</div>
